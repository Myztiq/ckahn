include mixins

doctype html(lang='en')
head
  title Carol Kahn
  link(rel="stylesheet", href="/style.css")
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
  // Required for Previews and Experiments
  script(src="//static.cdn.prismic.io/prismic.min.js")

body
  +nav("Carol Kahn", "main-nav")
    +nav_item( "/", "active" ) Home
    +nav_item( '#groups' )=pages.groups.getText('page.title')
    +nav_item( '#groups/women' )=pages['groups/women'].getText('page.title')
    +nav_item( '#groups/co-gender' )=pages['groups/co-gender'].getText('page.title')
    +nav_item( '#individual' )=pages.individual.getText('page.title')
    +nav_item( '#about' )=pages.about.getText('page.title')


  block body